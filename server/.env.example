# AdmuseEasy Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# AUTHENTICATION MODE
# =============================================================================
# Set to 'true' for demo mode (no database/OAuth needed)
# Set to 'false' or remove for full authentication mode
DEMO_MODE=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Atlas (production/cloud) - Primary choice
MONGODB_ATLAS_URI=mongodb+srv://username:password@admuse-cluster.xxxxx.mongodb.net/admuse-easy?retryWrites=true&w=majority

# MongoDB Local (development) - Fallback choice
MONGODB_LOCAL=mongodb://localhost:27017/admuse-easy

# Legacy support (will use as local fallback)
MONGODB_URI=mongodb://localhost:27017/admuse-easy

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# JWT Secret for token signing
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google Gemini AI API Key
GOOGLE_API_KEY=your-google-api-key-here

# Website hostname (for OAuth callbacks)
WEBSITE_HOSTNAME=localhost

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment
NODE_ENV=development
PORT=5000

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Local Development (Full Features):
# DEMO_MODE=false
# MONGODB_LOCAL=mongodb://localhost:27017/admuse-easy
# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret

# Demo Deployment (Railway/Azure):
# DEMO_MODE=true
# (No database or OAuth needed)

# Production Deployment (Railway with Atlas):
# DEMO_MODE=false
# MONGODB_ATLAS_URI=mongodb+srv://...
# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret